@model List<Category>
@if (TempData["success"] != null){
	<h2>@TempData["success"]</h2>
}
	<div class = "container">
		<div class = "row pt-4 pb-15">
			<div class="col-6">
				<h2 class = "text-primary">
				Category List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square-fill"></i> New category
				</a>
			</div>
		</div>
	<table class=" table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Display Order
				</th>
				<th>Modify</th>
			</tr>
		</thead>
		<tbody>	
			@foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
			{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-0">
								<i class="bi bi-pencil-square"></i>Edit
						</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-dark mx-0">
								<i class="bi bi-trash3"></i>Delete
						</a>
					</div>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>


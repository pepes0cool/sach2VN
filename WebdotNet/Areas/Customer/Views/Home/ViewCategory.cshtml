@model IEnumerable<Products>

<div class="row pb-3">
    <div class="col-12 mb-3">
        <form asp-controller="Home" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search for products..." value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="row pb-3">
    @if (!Model.Any())
    {
        <div class="col-12">
            <p class="text-center">No products match your query!</p>
        </div>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6 product-item">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded" style="height:500px; margin-block:10px; background-color:aliceblue">
                            <img src="@product.imgUrl" class="card-img-top rounded" style="width: 100%; height: 250px; object-fit:cover;" />
                            <div class="card-body pb-1">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center" style="background-color:bisque">
                                        @product.ProductName
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="card-body h5 text-dark text-opacity-75 text-center mb-0">
                                        List Price: <span class="text-decoration-none">@product.ListPrice$</span>
                                    </p>
                                </div>
                            </div>

                            <div>
                                <a asp-controller="Home" asp-area="Customer" asp-action="Details" asp-route-id="@product.ID"
                                   class="btn btn-primary bg-gradient border-0 form-control" style="background-color:chocolate">
                                    Buy now
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
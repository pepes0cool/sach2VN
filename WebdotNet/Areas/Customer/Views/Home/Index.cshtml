@model IEnumerable<Products>


<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<img src="@product.imgUrl" class="card-img-top rounded" style="width: 100%; height: 400px; object-fit: cover;" />
						<div class=" card-body pb-1">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
									@product.Title
								</p>
								<p class="card-title text-bg-warning text-center">by @product.Author</p>
							</div>
							<div class="pl-1">
								<p class="card-body h5 text-dark text-opacity-75 text-center mb-0">
									List Price: <span class="text-decoration-line-through">@product.ListPrice$</span>
								</p>
							</div>
							<div class="pl-1">
								<p class="card-body h5 text-dark text-opacity-75 text-center">
									Best Price: @product.Price100$
								</p>
							</div>
						</div>

						<div>
							<a asp-controller="Home" asp-area="Customer" asp-action="Details" asp-route-id="@product.ID"
							class="btn btn-primary bg-gradient border-0 form-control">
								Buy now
							</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	}
</div>



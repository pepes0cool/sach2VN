@model OrderHeader
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/bg.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            flex: 1;
            border-radius: 8px;
        }

        .header {
            text-align: center;
            padding: 10px 0;
        }

            .header img {
                max-width: 100px;
            }

        .content {
            padding: 20px;
        }

            .content p {
                font-size: 16px;
                line-height: 1.5;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table, th, td {
            border: 1px solid #dddddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .footer {
            text-align: center;
            padding: 10px 0;
            font-size: 12px;
            color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="~/images/logo.jpg" alt="pepes0cool" width="70%">
            <h1>Order Confirmation</h1>
        </div>
        <div class="content">
            <p>Hi @Model.Name,</p>
            <p>Thank you for your order! Here are the details:</p>
            <table>
                <tr>
                    <td>Order Number:</td>
                    <td>@Model.ID</td>
                </tr>
                <tr>
                    <td>Order Date:</td>
                    <td>@Model.OrderDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Est Shipping Date:</td>
                    <td>@Model.OrderDate.AddDays(7).ToShortDateString() - @Model.OrderDate.AddDays(14).ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Your Order Total:</td>
                    <td>@Model.OrderTotal.ToString("c")</td>
                </tr>
                <tr>
                    <td>Your Address:</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>Your Phone Number:</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </table>
            <p>We will notify you once your order has been shipped.</p>
            <p>Thank you for shopping with us!</p>
        </div>
        <div class="footer">
            <p>&copy; @DateTime.Now.Year pepes0cool. All rights reserved.</p>
        </div>
    </div>
</body>
</html>

@model Products

<div class="card shadow border-0 mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ID" hidden />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="form-floating py-2 col-12">Delete Products</h2>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                    @* <span asp-validation-for="Name" class="text-danger"></span> *@
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                    @* <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Category" disabled class="form-control border-0 shadow" />
                    <label asp-for="Category" class="ms-2"></label>
                    @* <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control" onclick="return confirm('Are you sure you want to delete this product? You can't undo after this !')">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary form-control">
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>





@model List<Products>

<div class="card shadow border-0 mt-4">

	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">Book list</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3 ">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Products" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-square-fill"></i> Add new product
				</a>
			</div>
		</div>
		<table id="tblData" @* Add id for table to use *@ class=" table table-bordered table-striped"
		style="width:100%">
			<thead>
				<tr>
					<th>Product Name</th>
					<th>Price</th>
					<th>Description</th>
					<th>Manufactorer</th>
					<th>Price</th>
					<th>Modify</th>
				</tr>
			</thead>

		</table>
	</div>
</div>
@section Scripts{
	<script src="~/js/product.js"></script>
} 
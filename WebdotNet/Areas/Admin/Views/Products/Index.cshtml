
@model List<Products>

<div class="card shadow border-0 mt-4">

	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">Book list</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3 ">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Products" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-square-fill"></i> Add new book
				</a>
			</div>
		</div>
		<table class=" table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Title
					</th>
					<th>
						Description
					</th>
					<th>Price</th>
					<th>Author</th>
					<th>Category</th>
					<th>
						Modify
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.ListPrice))
				{
					<tr>
						<td>
							@obj.Title
						</td>
						<td>
							@obj.Description
						</td>
						<td>
							@obj.Price100$
						</td>
						<td>
							@obj.Author
						</td>
						<td>
							@obj.Category
						</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Products" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-0">
									<i class="bi bi-pencil-square"></i>Edit
								</a>
								<a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-dark mx-0">
									<i class="bi bi-trash3"></i>Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
